
namespace bimrepo;

enum ComponentDataType: byte { Number = 1, String, Boolean, ArrayStart, ArrayEnd }

// fb guarantees you don't pay for unset table members
table ComponentData
{
    type: ComponentDataType = Number;
    array_length: int32;
    num: int32;
    str: string;
    boolean: bool;
}

table Component {
    entity: uint32;
    type: [string];
    data: [ComponentData];
}

root_type Component;